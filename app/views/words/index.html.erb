<h1>Listing Words</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Meaning</th>
      <th>Synonym</th>
      <th>Context</th>
      <th>Root</th>
      <th colspan="20"></th>
    </tr>
  </thead>

<% @words.each do |word| %>
  <tr>
    <td><%= word.name %></td>
    <td><%= word.meaning %></td>
    <td><%= word.synonym %></td>
    <td><%= word.context %></td>
    <td><%= word.root %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to 'New Word', new_word_path %>
